{
    "manifest_version": 2,
    "name": "MV2 ExtensionPay Local Development Extension",
    "short_name": "extensionpaysamplemv2",
    "version": "1.0",
    "author": "ExtensionPay",
    "description": "For developing new extensionpay features and fixing bugs.",
    "background": {
        "scripts": ["ExtPay.js", "background.js"]
    },
    "content_scripts": [
        {
            "matches": ["http://localhost/*"],
            "js": ["ExtPay.js"],
            "run_at": "document_start"
        }, {
            "matches": ["https://*/*"],
            "js": ["ExtPay.js", "content.js"]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "notifications",
        "storage"
    ]
}

