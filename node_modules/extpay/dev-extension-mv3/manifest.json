{
    "manifest_version": 3,
    "name": "MV3 ExtensionPay Local Development Extension",
    "short_name": "extensionpaytestmv3",
    "version": "1.0",
    "author": "ExtensionPay",
    "description": "For developing new extensionpay features and fixing bugs.",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["http://localhost/*"],
            "js": ["ExtPay.js"],
            "run_at": "document_start"
        }, {
            "matches": ["https://*/*"],
            "js": ["ExtPay.js", "content.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "notifications",
        "storage"
    ]
}

